     // layout awal
    <Button
        android:id="@+id/btn_nurul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nurul"/>
    <Button
        android:id="@+id/btn_ziyan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ziyan"/>
        -->
</LinearLayout>